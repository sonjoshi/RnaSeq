manifest {
    description = 'A Nextflow pipeline for RNASeq analysis using Docker containers'
    author = 'Sonali Joshi'
}

params {
    input_data = "$baseDir/SampleData/*.fastq"
}

process {
	withName:checkQuality {
		container = 'staphb/fastqc'
	}
	
	withName:aggregateQC {
		container = 'staphb/multiqc'
	}

}

docker {
    enabled = true
    docker.runOptions = '-v ${PWD}:/data/'
}